    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="icon" href="{{ asset('img/sortir.jpg') }}">
</head>
    <body>
         <header>
             {% block header %}
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
