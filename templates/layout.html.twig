                <a class="navbar-brand" href="#">
                    <img src="{{ asset('img/sortir.jpg') }}" alt="logo" style="width:100px;">
                </a>
                <!-- Links -->


                {% if app.user.administrateur == false %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('mon_profil') }}">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('security_logout') }}">Se déconnecter</a>
                    </li>
                 </ul>
                 {% else %}
                     <ul class="navbar-nav">
                         <li class="nav-item">
                             <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="{{ path('mon_profil') }}">Mon profil</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="{{ path('security_logout') }}">Se déconnecter</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="#">Villes</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="#">Site</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="{{ path('nouvel_utilisateur') }}">Créer Utilisateur</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link" href="{{ path('import') }}">Importer fichier CSV</a>
                         </li>

                     </ul>

                {% endif %}
             </nav>
             {%  endblock %}
         </header>
     <main>
      {% block main %}
         {%  endblock %}
     </main>
        <footer>
            © {{ "now"|date("Y") }} Site crée par M&M's!!!
        </footer>
     </body>
</html>
