{% extends 'layout.html.twig' %}


{% block main %}
 <form action="{{ path('security_login') }}" method="post">
   <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Identifiant </label>
      <div class="col-sm-10">
         <input type="text" value="{{ last_username }}" class="form-control" id="username" name="_username" placeholder="Veuillez renseigner votre adresse mail" required="required">
      </div>
   </div>
   <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Mot de passe</label>
      <div class="col-sm-10">
         <input type="password" class="form-control" id="password" name="_password" placeholder="Veuillez renseigner votre mot de passe" required="required">
      </div>
   </div>
     <div class="form-group row">
         <div class="col-sm-2"></div>
         <div class="col-sm-10">
             <div class="form-check">
                 <input type="checkbox" id="remember_me" name="_remember_me"/>
                 <label for="remember_me">Se souvenir de moi</label>
             </div>
         </div>
   <div class="form-group row">
       <div class="col-sm-2"></div>
      <div class="col-sm-10">
         <button type="submit" class="btn btn-primary">Sign in</button>
      </div>
   </div>
     </div>
</form>
{% endblock %}
