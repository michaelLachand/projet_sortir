{% extends 'layout.html.twig' %}

{% block header %}
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="#">
            <img src="{{ asset('img/sortir.jpg') }}" alt="logo" style="width:100px;">
        </a>
    </nav>
{% endblock %}


{% block main %}
    <div class="bg">
        <div class="container">
            <form action="{{ path('security_login') }}" method="post">
                <div class="container center-block">
                    <div class="form-group row ">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Identifiant ou Email</label>
                        <div class="col-sm-4">
                            <input type="text" value="{{ last_username }}" class="form-control" id="username"
                                   name="_username" placeholder="Veuillez renseigner votre adresse mail ou Pseudo"
                                   required="required">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Mot de passe</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password" name="_password"
                                   placeholder="Veuillez renseigner votre mot de passe" required="required">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input type="checkbox" id="remember_me" name="_remember_me"/>
                                <label for="remember_me">Se souvenir de moi</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
{% endblock %}
