{% extends 'layout.html.twig' %}

{% block main %}
    <div class="bg">
        <div class="container">
            <img src="{{ asset ('img/' ~ participant.photo) }}" height="150px" width="150px">
            <div>
                <h3>{{ participant.login }}</h3>
            </div>
            <div>
                Prénom : {{ participant.prenom }}
            </div>
            <div>
                Nom : {{ participant.nom }}
            </div>
            <div>
                Téléphone : {{ participant.telephone }}
            </div>
            <div>
                Email : {{ participant.mail }}
            </div>
            <div>
                Ville de ratachement : {{ participant.site.getNomSite }}
            </div>
            <a href="{{ path('accueil') }}" type="button" class="btn btn-primary">Annuler</a>
        </div>
    </div>
{% endblock %}

