{% extends 'layout.html.twig' %}



{% block header %}
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="#">
            <img src="{{ asset('img/logo.jpg') }}" alt="logo" style="width:60px;">
        </a>
        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Mon profil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('security_logout') }}">Se déconnecter</a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block main %}
    <div class="bg">
        <div class="container">
            <img src="{{ asset ('img/' ~ app.user.photo) }}" alt="logo" height="150px" width="150px">

            {{ form_start(form) }}

            {{ form_row(form.login, {'label':'Pseudo' ,'attr': {'placeholder':'Veuillez entrer un pseudo '}}) }}
            {{ form_row(form.prenom, {'label':'Prénom' ,'attr': {'placeholder':'Veuillez entrer votre prénom '}}) }}
            {{ form_row(form.nom, {'label':'Nom' ,'attr': {'placeholder':'Veuillez entrer votre nom '}}) }}
            {{ form_row(form.telephone, {'label':'Téléphone' ,'attr': {'placeholder':'Veuillez entrer votre numéro de téléphone '}}) }}
            {{ form_row(form.mail, {'label':'Email' ,'attr': {'placeholder':'Veuillez entrer votre adresse mail '}}) }}
            {{ form_row(form.site, {'label':'Ville de rattachement' ,'attr': {'placeholder':'Veuillez entrer votre adresse mail '}}) }}
            {{ form_row(form.photo, {'label': 'Telecharger vers le serveur'}) }}
            <button type="submit" class="btn btn-success">Enregistrer</button>
            <button type="reset" onclick='location.href="sorties"' class="btn btn-dark">Annuler</button>
            <a type="button" class="btn btn-primary" href="{{ path('mot_de_passe') }}" role="button">Changer le mot de
                passe</a>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}